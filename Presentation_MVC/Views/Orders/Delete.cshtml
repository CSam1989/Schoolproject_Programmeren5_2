@model Application.Orders.Queries.GetOrderByIdQuery.OrderByIdVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.FirstName)
            @Html.DisplayFor(model => model.Order.Customer.FamilyName)
        </dd>
        <dt class="col-sm-2">
            OrderID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
