@*Special thanks to Mike @ https://www.mikesdotnetting.com/article/328/simple-paging-in-asp-net-core-razor-pages*@
@model Application.Common.Models.PagSortFilterToReturnDto;

@{
    if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.ShowFirst ? "disabled" : "") mx-1">
                <a asp-route-CurrentPage="1" asp-route-sortby="@(Model.SortBy)" class="page-link">
                    <i class="fas fa-fast-backward"></i>
                </a>
            </li>

            <li class="page-item @(!Model.ShowPrevious ? "disabled" : "") mx-1">
                <a asp-route-CurrentPage="@(Model.CurrentPage - 1)" asp-route-sortby="@(Model.SortBy)" asp-route-currentFilter="@(Model.CurrentFilter)" class="page-link">
                    <i class="fas fa-step-backward"></i>
                </a>
            </li>
            <li class="mx-1 mt-1">@Model.CurrentPage of @Model.TotalPages</li>
            <li class="page-item  @(!Model.ShowNext ? "disabled" : "") mx-1">
                <a asp-route-CurrentPage="@(Model.CurrentPage + 1)" asp-route-sortby="@(Model.SortBy)" asp-route-currentFilter="@(Model.CurrentFilter)" class="page-link">
                    <i class="fas fa-step-forward"></i>
                </a>
            </li>

            <li class="page-item  @(!Model.ShowLast ? "disabled" : "") mx-1">
                <a asp-route-CurrentPage="@Model.TotalPages" asp-route-sortby="@(Model.SortBy)" asp-route-currentFilter="@(Model.CurrentFilter)" class="page-link">
                    <i class="fas fa-fast-forward"></i>
                </a>
            </li>
        </ul>
    }
}